<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nativeAdViewId"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_width="match_parent"
                android:maxHeight="@dimen/_300sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rr1"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.gms.ads.nativead.MediaView
                        android:id="@+id/mediaView"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:maxHeight="@dimen/_300sdp" />

                    <ImageView
                        android:id="@+id/mediaViewImage"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:maxHeight="@dimen/_300sdp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_corner_2"
                        android:backgroundTint="#C37400"
                        android:paddingHorizontal="3dp"
                        android:text="Ad"
                        android:textColor="@color/white"
                        android:textSize="9dp" />



                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/btnClick"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginVertical="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_corner_10"
                    android:padding="0dp"

                    android:backgroundTint="@color/nativeButtonColor">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/callToActionText"
                        android:lines="1"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:text="Install"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginVertical="4dp"
                    android:layout_width="match_parent">

                    <ImageView
                        android:adjustViewBounds="true"
                        android:id="@+id/icon"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="@dimen/_25sdp" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/ll2"
                        android:layout_toRightOf="@+id/icon"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtHead"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="name"
                            android:textColor="@color/ad_font"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:alpha="0.7"
                            android:ellipsize="marquee"
                            android:id="@+id/txtDescription"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:maxLines="1"
                            android:textColor="@color/ad_font"
                            android:text="description"
                            android:textSize="@dimen/_9sdp" />


                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/sponsered"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:lines="1"
                                android:singleLine="true"
                                android:text="Sponsored"
                                android:textColor="@color/ad_font"
                                android:textSize="@dimen/_10sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:alpha="0.7"
                                android:id="@+id/ratingTextview"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:lines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/ad_font"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:alpha="0.7"
                                android:id="@+id/advertiserTextview"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_width="match_parent"
                                android:lines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/ad_font"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">

                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_7sdp"
                            android:layout_width="@dimen/_15sdp"
                            android:src="@drawable/more" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
